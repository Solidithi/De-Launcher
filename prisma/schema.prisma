// DB schema for MVP verseion of the app
generator client {
  provider = "prisma-client-js"
}

// mockup db
datasource db {
  provider = "postgresql"
  url      = env("MVP_DB_URL")
}

model User {
  id            String  @id @default(uuid())
  address       String  @unique
  name          String
  email         String
  emailVerified Boolean
}

model SocialTask {
  id              String   @id @default(uuid())
  taskID          String   @unique
  socialPlatform  String
  taskDescription String
  taskType        TaskType
  postUrl         String
}

model TaskDone {
  id      String   @id @default(uuid())
  address String
  taskID  String
  doneAt  DateTime @default(now())
}

model Project {
  id               String   @id @default(uuid())
  projectID        String   @unique
  description      String
  shortDescription String
  projectImageUrls String[]
  txnHashCreated   String   @unique
}

// Enum for task type
enum TaskType {
  follow
  like
  share
}

model OTP {
  id        String   @id @default(uuid())
  email     String
  code      String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
